<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:id="@+id/linear_layout_theme_container"
    android:padding="@dimen/v4dp">

    <ImageView
        android:id="@+id/image_view_image"
        android:layout_width="@dimen/v48dp"
        android:layout_height="@dimen/v48dp"
        android:scaleType="center"
        android:src="@drawable/ic_item_theme_uncheck"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_view_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="1"
        android:padding="@dimen/v8dp"
        android:textSize="@dimen/v16sp" />
</LinearLayout>