<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/ThemeBlack">

    <ImageView
        android:id="@+id/image_view_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/linear_layout_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/ThemeLime"
        android:orientation="vertical"
        android:padding="@dimen/v16dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorTransparent"
            android:gravity="center">

            <TextView
                android:id="@+id/text_view_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorTransparent"
                android:textSize="@dimen/v28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorTransparent"
                android:padding="@dimen/v4dp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_view_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/v8dp"
            android:background="@color/colorTransparent"
            android:textSize="@dimen/v16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/button_go"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/v28dp"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/v64dp"
        android:background="@drawable/bg_button_splash"
        android:text="@string/go"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="@dimen/v36dp"
        android:layout_height="@dimen/v36dp"
        android:layout_gravity="center" />
</FrameLayout>